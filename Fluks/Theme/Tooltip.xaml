<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="CustomTooltipStyle" TargetType="ToolTip">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToolTip">
                    <Border CornerRadius="4" HorizontalAlignment="Stretch" Background="White" Opacity="0.7" BorderBrush="Aquamarine" BorderThickness="2" Margin="7,5,7,5">
                        <TextBlock VerticalAlignment="Center" FontSize="16" HorizontalAlignment="Center" Foreground="Black" Text="{TemplateBinding Content}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>